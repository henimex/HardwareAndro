<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HardwareAndro.Views.Lesson8Pages">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" Grid.Column="0" BackgroundColor="DarkOrchid"/>
            <StackLayout Grid.Row="0" Grid.Column="1" BackgroundColor="Maroon"/>

            <BoxView Grid.Row="1" Grid.Column="0" BackgroundColor="Aqua"/>
            <BoxView Grid.Row="1" Grid.Column="1" BackgroundColor="Green"/>
        </Grid>
        
    </ContentPage.Content>
</ContentPage>