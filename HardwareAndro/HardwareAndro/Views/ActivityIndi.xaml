<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HardwareAndro.Views.ActivityIndi"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout>
            <AbsoluteLayout>
                <ActivityIndicator Color="White" HorizontalOptions="Center" VerticalOptions="Center" IsRunning="{Binding Source={x:Reference _image},Path=IsLoading}" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5,0.5,100,100"/>
                <Image x:Name="_image" Aspect="Fill" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1"/>
            </AbsoluteLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>